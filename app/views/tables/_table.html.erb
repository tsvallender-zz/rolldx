<h3><%= link_to table.title, table %> by <%= link_to table.user.username, table.user %></h3>
<% if (defined? table.title) && !table.title.empty? %>
<div class="tableDescription"><%= table.description %></div>
<% end %>
<table id="table-<%= table.id %>">
  <tr>
    <th>No.</th>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% table.rows.order('num').each do |r| %>
  <tr>
    <td><%= r.num %></td>
    <td><%= r.name %></td>
    <td><%= r.description %></td>
  </tr>
  <% end %>
</table>

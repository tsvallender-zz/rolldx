<%= form_with(model: @table) do |f| %>

<%= render 'shared/error_messages', object: f.object %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :dice %>
<%= f.number_field :dice %>

<fieldset>
  <legend>Rows:</legend>

  <%= link_to_add_nested(f, :rows, '#rows') %>
  <div id="rows">
    <%= f.fields_for :rows do |row_f| %>
    <%= render 'row_fields', form: row_f %>
    <% end %>
  </div>
</fieldset>

<%= f.submit yield(:button_text) %>

<% end %>

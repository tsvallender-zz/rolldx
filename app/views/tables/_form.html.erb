<%= form_with(model: @table) do |f| %>

<%= render 'shared/error_messages', object: f.object %>

<%= f.label :title %>
<%= f.text_field :title %>

<fieldset>
  <legend>Rows:</legend>

  <%= link_to_add_nested(f, :rows, '#rows') %>
  <div id="rows">
    <%= f.fields_for :rows do |row_f| %>
    <%= render 'row_fields', form: row_f %>
    <br />
    <% end %>
  </div>
</fieldset>

<%= f.submit yield(:button_text) %>

<% end %>

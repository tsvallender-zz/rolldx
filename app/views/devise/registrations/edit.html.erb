<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <span class="helperText">A real name or nickname.</span>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :web, 'Website URL' %>
    <span class="helperText">Where is the best place to find you
    online?</span>
    <%= f.text_field :web %>
  </div>

  <div class="field">
    <%= f.label :support, 'Support link' %>
    <span class="helperText">Where can people offer financial support?
    Add a link here (e.g. Ko-fi or Patreon).</span>
    <%= f.text_field :support %>
  </div>

  <div class="field">
    <%= f.label :itch %>
    <span class="helperText">Your Itch username, if you have one, so
    people can find your games.</span>
    <%= f.text_field :itch %>
  </div>

  <div class="field">
    <%= f.label :twitter %>
    <span class="helperText">Your Twitter username, if you have one.</span>
    <%= f.text_field :twitter %>
  </div>

  
  <div class="field">
    <%= f.label :password %>
    <span class="helperText">Leave blank if you don't want to change it.
    <% if @minimum_password_length %>
      <%= @minimum_password_length %> characters minimum.
      <% end %></span>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %>
    <span class="helperText">Required to confirm your changes.</span>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
